// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Bot {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  uid         String   @unique              
  name        String
  domain      String   @default("medical")  
  precallUrl  String
  functionUrl String
  postcallUrl String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  calls CallLog[] 
}

model Patient {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  patientId String   @unique             
  name      String
  dob       DateTime
  allergies String[]
  notes     String?
  lastVisit DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  calls CallLog[]   
}

model CallLog {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  callId        String    @unique  
  patientId  String?   @db.ObjectId
  patient    Patient?  @relation(fields: [patientId], references: [id])
  botId         String    
  bot           Bot       @relation(fields: [botId], references: [uid])
  incomingAt    DateTime  @default(now())
  endedAt       DateTime?
  preCallData   Json?
  functionCalls Json[]    @default([])
  transcript    String?
  postCallData  Json?
  status        String    @default("completed") 
}

